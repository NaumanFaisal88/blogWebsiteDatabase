<%- include("partials/header"); -%>
    <h1>
        <%= pageTitle %>
    </h1>


    <p>
        <%= paragraphContent %>
    </p>
    <% posts.forEach(function(post) { %>
        <div class="post">
            <h1>
                <%= post.title %>
            </h1>
            <% if (post.content) { %>
                <p>
                    <%= post.content.substring(0,100)+ " ..." %>
                        <a href="/posts/<%= post._id %>">Read more</a>
                </p>
                <% } %>
        </div>
        <% }); %>

            <%- include("partials/footer"); -%>